<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kulikovman.steelratgame.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="start"
                android:padding="15dp"
                android:text="@string/ch_0"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/way_button_1"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-light"
                android:minHeight="60dp"
                android:text="Идти направо, прямо, а потом повернуть сразу за третьим спуском"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/way_button_2"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:fontFamily="sans-serif-light"
                android:minHeight="60dp"
                android:text="Идти направо"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
