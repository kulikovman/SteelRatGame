<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.kulikovman.steelratgame.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapter_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:gravity="start"
                android:padding="15dp"
                android:text="@string/ch_48"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/way_button_1"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Первый вариант"/>

            <Button
                android:id="@+id/way_button_2"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Второй"/>

            <Button
                android:id="@+id/way_button_3"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Насыпали серной кислоты в традиционный узел деления плотности"/>

            <Button
                android:id="@+id/way_button_4"
                style="@style/MyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Идти направо, через лес жуткого воя вурдалаков"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="8dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
